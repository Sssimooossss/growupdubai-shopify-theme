        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Green",
        "default": "#2ECC71"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Green",
        "default": "#27AE60"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#333333"
      },
      {
        "type": "color",
        "id": "color_accent",
