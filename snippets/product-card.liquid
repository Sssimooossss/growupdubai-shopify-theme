<!-- Product Card Snippet -->
<div class="product-card fade-in-on-scroll" data-product-id="{{ product.id }}">
  <!-- Product Image -->
  <div class="relative overflow-hidden group">
    <a href="{{ product.url }}" class="block">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | img_url: '400x300' }}" 
             alt="{{ product.title }}" 
             class="product-image w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
      {% else %}
        <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      {% endif %}
    </a>
    
    <!-- Badges -->
    <div class="absolute top-2 left-2 space-y-1">
      {% if product.compare_at_price > product.price %}
        <span class="inline-block bg-red-500 text-white px-2 py-1 rounded text-xs font-semibold">
          SALE
        </span>
      {% endif %}
      
      {% unless product.available %}
        <span class="inline-block bg-gray-800 text-white px-2 py-1 rounded text-xs font-semibold">
          SOLD OUT
        </span>
      {% endunless %}
      
      {% if product.tags contains 'new' %}
        <span class="inline-block bg-brand-green text-white px-2 py-1 rounded text-xs font-semibold">
          NEW
        </span>
      {% endif %}
    </div>
    
    <!-- Wishlist Button -->
    <button class="wishlist-btn absolute top-2 right-2 p-2 rounded-full bg-white bg-opacity-80 hover:bg-opacity-100 transition-all opacity-0 group-hover:opacity-100"
            data-product-id="{{ product.id }}"
            aria-label="Add to wishlist">
      <svg class="w-4 h-4 text-gray-600 hover:text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
    </button>
    
    <!-- Quick Add Overlay -->
    {% if product.available %}
      <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
        <button class="quick-add-btn bg-white text-gray-900 px-4 py-2 rounded-lg font-semibold hover:bg-gray-100 transition-colors transform translate-y-2 group-hover:translate-y-0"
                data-variant-id="{{ product.selected_or_first_available_variant.id }}">
          Quick Add
        </button>
      </div>
    {% endif %}
  </div>

  <!-- Product Info -->
  <div class="product-info p-4">
    <!-- Vendor -->
    {% if product.vendor != blank and settings.show_vendor %}
      <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-1">
        {{ product.vendor }}
      </p>
    {% endif %}
    
    <!-- Title -->
    <a href="{{ product.url }}" class="block">
      <h3 class="product-title text-lg font-semibold text-gray-900 dark:text-white mb-2 hover:text-brand-green transition-colors line-clamp-2">
        {{ product.title }}
      </h3>
    </a>
    
    <!-- Description -->
    {% if product.description != blank %}
      <p class="product-description text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">
        {{ product.description | strip_html | truncate: 80 }}
      </p>
    {% endif %}
    
    <!-- Rating (if using a review app) -->
    {% comment %}
    <div class="flex items-center mb-2">
      <div class="flex text-yellow-400">
        <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
        </svg>
        <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
        </svg>
        <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
        </svg>
        <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
        </svg>
        <svg class="w-4 h-4 text-gray-300 fill-current" viewBox="0 0 20 20">
          <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
        </svg>
      </div>
      <span class="text-xs text-gray-500 ml-2">(4.2)</span>
    </div>
    {% endcomment %}
    
    <!-- Price -->
    <div class="flex items-center justify-between mb-3">
      <div class="price-wrapper">
        {% if product.compare_at_price > product.price %}
          <span class="product-price text-xl font-bold text-brand-green">{{ product.price | money }}</span>
          <span class="compare-price text-sm text-gray-500 line-through ml-2">{{ product.compare_at_price | money }}</span>
          <span class="save-amount text-xs text-red-600 font-semibold ml-2">
            Save {{ product.compare_at_price | minus: product.price | money }}
          </span>
        {% else %}
          <span class="product-price text-xl font-bold text-brand-green">{{ product.price | money }}</span>
        {% endif %}
      </div>
      
      <!-- Stock indicator -->
      {% if product.available %}
        {% assign total_inventory = 0 %}
        {% for variant in product.variants %}
          {% if variant.inventory_management == 'shopify' and variant.inventory_policy == 'deny' %}
            {% assign total_inventory = total_inventory | plus: variant.inventory_quantity %}
          {% endif %}
        {% endfor %}
        
        {% if total_inventory > 0 and total_inventory <= 10 %}
          <span class="text-xs text-orange-600 font-semibold">
            Only {{ total_inventory }} left!
          </span>
        {% endif %}
      {% endif %}
    </div>
    
    <!-- Variant Options Preview -->
    {% unless product.has_only_default_variant %}
      <div class="mb-3">
        {% for option in product.options_with_values limit: 1 %}
          {% if option.name == 'Color' or option.name == 'Colour' %}
            <div class="flex space-x-1">
              {% for value in option.values limit: 5 %}
                <div class="w-4 h-4 rounded-full border border-gray-300" 
                     style="background-color: {{ value | handle | replace: '-', '' }}"
                     title="{{ value }}"></div>
              {% endfor %}
              {% if option.values.size > 5 %}
                <span class="text-xs text-gray-500">+{{ option.values.size | minus: 5 }} more</span>
              {% endif %}
            </div>
          {% else %}
            <p class="text-xs text-gray-500">
              {{ option.values.size }} {{ option.name | downcase }}{% if option.values.size > 1 %}s{% endif %} available
            </p>
          {% endif %}
        {% endfor %}
      </div>
    {% endunless %}
    
    <!-- Add to Cart Button -->
    {% if product.available %}
      {% if product.has_only_default_variant %}
        <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="w-full btn btn-primary">
            Add to Cart - {{ product.price | money }}
          </button>
        </form>
      {% else %}
        <a href="{{ product.url }}" class="block w-full btn btn-primary text-center">
          Select Options - {{ product.price_min | money }}{% if product.price_min != product.price_max %}+{% endif %}
        </a>
      {% endif %}
    {% else %}
      <button class="w-full btn btn-secondary opacity-50 cursor-not-allowed" disabled>
        Sold Out
      </button>
    {% endif %}
  </div>
</div>
