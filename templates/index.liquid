{%- comment -%}
  Homepage template for GrowUp Dubai Shopify theme
  Showcases social media growth services with platform-specific sections
{%- endcomment -%}

<div class="homepage">
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          {{ settings.hero_title | default: "Get real Arab Instagram followers in seconds!" }}
          <img src="{{ 'uae-flag.gif' | asset_url }}" alt="UAE Flag" class="hero-flag">
        </h1>
        <p class="hero-subtitle">
          {{ settings.hero_subtitle | default: "Top quality for UAE & Gulf market. Increase your credibility & boost the algorithm." }}
        </p>
      </div>
      
      <!-- Platform Cards -->
      <div class="platform-cards">
        <div class="platform-card instagram-card">
          <div class="platform-icon">
            {% render 'icon-instagram' %}
          </div>
          <h3>Instagram</h3>
          <p>Followers, Likes, Views</p>
          <a href="{{ collections['instagram-services'].url }}" class="btn btn-primary">
            View Services
          </a>
        </div>
        
        <div class="platform-card tiktok-card featured">
          <div class="platform-icon">
            {% render 'icon-tiktok' %}
          </div>
          <h3>TikTok</h3>
          <p>Followers, Likes, Views</p>
          <a href="{{ collections['tiktok-services'].url }}" class="btn btn-primary">
            View Services
          </a>
        </div>
        
        <div class="platform-card youtube-card">
          <div class="platform-icon">
            {% render 'icon-youtube' %}
          </div>
          <h3>YouTube</h3>
          <p>Subscribers, Likes, Views</p>
          <a href="{{ collections['youtube-services'].url }}" class="btn btn-primary">
            View Services
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Live Notifications -->
  <section class="live-notifications">
    <div class="container">
      <div class="notification-banner">
        <div class="notification-dot"></div>
        <span class="notification-text">5,000 Instagram followers delivered</span>
        <span class="notification-check">‚úì</span>
        <span class="notification-time">2 min ago</span>
      </div>
    </div>
  </section>
  
  <!-- Featured Services -->
  {% if settings.featured_collection != blank %}
    <section class="featured-services">
      <div class="container">
        <h2 class="section-title">Popular Services</h2>
        <div class="services-grid">
          {% for product in collections[settings.featured_collection].products limit: settings.featured_products_limit %}
            {% render 'product-card', product: product %}
          {% endfor %}
        </div>
      </div>
    </section>
  {% endif %}
  
  <!-- Why Choose Section -->
  <section class="why-choose">
    <div class="container">
      <h2 class="section-title">Why Choose GrowUp Dubai?</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <img src="{{ 'rocket-icon.png' | asset_url }}" alt="Instant Delivery">
          </div>
          <h3>Instant Delivery</h3>
          <p>Fast, automated fulfillment.</p>
