<style>
  .homepage {
    overflow-x: hidden;
  }

  .hero-section {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 4rem 0;
    text-align: center;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: 3rem;
    margin: 1rem 0;
    color: var(--color-text);
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .hero-graphic {
    display: inline-block;
    padding: 2rem;
    border-radius: 20px;
    color: white;
    font-size: 1.5rem;
    margin: 2rem 0;
  }

  .services-section {
    padding: 4rem 0;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-text);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .service-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .service-title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .service-description {
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .service-features {
    margin-bottom: 1rem;
  }

  .feature {
    display: inline-block;
    background: #f8f9fa;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.9rem;
    margin: 0.2rem;
  }

  .service-pricing {
    margin-bottom: 1.5rem;
  }

  .price-original {
    text-decoration: line-through;
    color: #999;
    margin-right: 0.5rem;
  }

  .service-btn {
    width: 100%;
  }

  .features-section {
    background: #f8f9fa;
    padding: 4rem 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .testimonials-section {
    padding: 4rem 0;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border-left: 4px solid var(--color-primary);
  }

  .testimonial-content {
    margin-bottom: 1rem;
    font-style: italic;
  }

  .testimonial-author strong {
    display: block;
    margin-bottom: 0.3rem;
  }

  .testimonial-author span {
    color: var(--color-text-light);
    font-size: 0.9rem;
  }

  .cta-section {
    background: var(--color-secondary);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .btn-large {
    padding: 1.5rem 3rem;
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
