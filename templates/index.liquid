  <!-- Services Section -->
  <section id="services" class="services-section">
    <div class="container">
      <h2 class="section-title">Our Premium Services</h2>
      <div class="services-grid">
        
        {% for product in collections.instagram-services.products limit: 6 %}
        <div class="service-card">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width: 300 }}" alt="{{ product.title }}" class="service-image">
          {% endif %}
          
          <div class="service-content">
            <h3 class="service-title">{{ product.title }}</h3>
            <p class="service-description">{{ product.description | truncate: 100 }}</p>
            
            <div class="service-features">
