<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="footer-content">
    <div class="container">
      <div class="footer-grid">
        <!-- Company Info -->
        <div class="footer-column footer-about">
          <div class="footer-logo">
            {% if section.settings.footer_logo != blank %}
              <img src="{{ section.settings.footer_logo | img_url: '200x' }}" 
                   alt="{{ shop.name }}" 
                   class="footer-logo-image">
            {% else %}
              <span class="footer-logo-text">{{ shop.name }}</span>
            {% endif %}
          </div>
          
          {% if section.settings.footer_text != blank %}
            <div class="footer-description rte">
              {{ section.settings.footer_text }}
            </div>
          {% endif %}
          
          <!-- Operational Status -->
          <div class="operational-status">
            <div class="status-indicator">
              <span class="status-dot"></span>
              <span class="status-text">All our services are fully operational and continuously updated.</span>
            </div>
          </div>
          
          <!-- Social Media Links -->
          {% if section.settings.social_instagram != blank or section.settings.social_tiktok != blank or section.settings.social_youtube != blank %}
            <div class="footer-social">
              <h4 class="social-title">Follow Us</h4>
              <div class="social-links">
                {% if section.settings.social_instagram != blank %}
                  <a href="{{ section.settings.social_instagram }}" 
                     class="social-link instagram" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     aria-label="Follow us on Instagram">
                    {% render 'icon-instagram' %}
                  </a>
                {% endif %}
                
                {% if section.settings.social_tiktok != blank %}
                  <a href="{{ section.settings.social_tiktok }}" 
                     class="social-link tiktok" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     aria-label="Follow us on TikTok">
                    {% render 'icon-tiktok' %}
                  </a>
                {% endif %}
                
                {% if section.settings.social_youtube != blank %}
                  <a href="{{ section.settings.social_youtube }}" 
                     class="social-link youtube" 
                     target="_blank" 
                     rel="noopener noreferrer"
                     aria-label="Follow us on YouTube">
                    {% render 'icon-youtube' %}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
        
        <!-- Services Links -->
        <div class="footer-column">
          <h4 class="footer-title">Services</h4>
          <ul class="footer-links">
            {% for link in linklists.footer-services.links %}
              <li>
                <a href="{{ link.url }}" class="footer-link">
                  {{ link.title }}
                </a>
              </li>
            {% else %}
              <li><a href="#" class="footer-link">Instagram Followers</a></li>
              <li><a href="#" class="footer-link">Instagram Likes</a></li>
              <li><a href="#" class="footer-link">TikTok Followers</a></li>
              <li><a href="#" class="footer-link">TikTok Likes</a></li>
              <li><a href="#" class="footer-link">YouTube Subscribers</a></li>
              <li><a href="#" class="footer-link">YouTube Views</a></li>
            {% endfor %}
          </ul>
        </div>
        
        <!-- Support Links -->
        <div class="footer-column">
          <h4 class="footer-title">Support</h4>
          <ul class="footer-links">
            {% for link in linklists.footer-support.links %}
              <li>
                <a href="{{ link.url }}" class="footer-link">
                  {{ link.title }}
                </a>
              </li>
            {% else %}
              <li><a href="#" class="footer-link">FAQ</a></li>
              <li><a href="/pages/about" class="footer-link">About Our Company</a></li>
              <li><a href="/pages/terms" class="footer-link">Terms of Service</a></li>
              <li><a href="/pages/privacy" class="footer-link">Privacy Policy</a></li>
              <li><a href="/pages/refund" class="footer-link">Refund Policy</a></li>
            {% endfor %}
          </ul>
        </div>
        
        <!-- Contact Info -->
        <div class="footer-column">
          <h4 class="footer-title">Contact</h4>
          
          {% if section.settings.contact_email != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìß</span>
              <a href="mailto:{{ section.settings.contact_email }}" class="contact-link">
                {{ section.settings.contact_email }}
              </a>
            </div>
          {% endif %}
          
          {% if section.settings.contact_phone != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìû</span>
              <a href="tel:{{ section.settings.contact_phone }}" class="contact-link">
                {{ section.settings.contact_phone }}
              </a>
            </div>
          {% endif %}
          
          {% if section.settings.contact_address != blank %}
            <div class="contact-item">
              <span class="contact-icon">üìç</span>
              <address class="contact-address">
                {{ section.settings.contact_address | newline_to_br }}
              </address>
            </div>
          {% endif %}
          
          <!-- Trust Badges -->
          <div class="trust-badges">
            <div class="trust-badge">
              <span class="badge-icon">üîí</span>
              <span class="badge-text">SSL Secured</span>
            </div>
            <div class="trust-badge">
              <span class="badge-icon">üí≥</span>
              <span class="badge-text">Safe Payment</span>
            </div>
            <div class="trust-badge">
              <span class="badge-icon">‚ö°</span>
              <span class="badge-text">Instant Delivery</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Footer Bottom -->
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <div class="footer-legal">
          <p class="company-info">
            {{ section.settings.company_info | default: "BLDMEDIA - FZCO. Dubai Silicon Oasis DDP, Building A1, Dubai. United Arab Emirates" }}
          </p>
          <p class="copyright">
            ¬© {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ 'general.footer.all_rights_reserved' | t }}
          </p>
        </div>
        
        <div class="footer-payment">
          <span class="payment-text">We accept:</span>
          <div class="payment-icons">
            <span class="payment-icon">üí≥</span>
            <span class="payment-icon">üè¶</span>
            <span class="payment-icon">üì±</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
.site-footer {
  background: var(--color-text);
  color: white;
  margin-top: auto;
}

.footer-content {
  padding: 3rem 0 2rem;
}

.footer-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 1.5fr;
  gap: 3rem;
}

.footer-column {
  display: flex;
  flex-direction: column;
}

.footer-about {
  max-width: 400px;
}

.footer-logo {
  margin-bottom: 1.5rem;
}

.footer-logo-image {
  max-height: 60px;
  width: auto;
  filter: brightness(0) invert(1); /* Make logo white */
}

.footer-logo-text {
  font-size: 1.5rem;
  font-weight: bold;
  color: white;
}

.footer-description {
  margin-bottom: 1.5rem;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.8);
}

.operational-status {
  margin-bottom: 2rem;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.status-dot {
  width: 8px;
  height: 8px;
  background: var(--color-primary);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.status-text {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
}

.footer-social {
  margin-bottom: 1rem;
}

.social-title {
  color: white;
  margin-bottom: 1rem;
  font-size: 1.1rem;
}

.social-links {
  display: flex;
  gap: 1rem;
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  transition: all 0.3s ease;
  text-decoration: none;
}

.social-link.instagram {
  background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
  color: white;
}

.social-link.tiktok {
  background: #000;
  color: #25f4ee;
}

.social-link.youtube {
  background: #FF0000;
  color: white;
}

.social-link:hover {
  transform: scale(1.1);
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
}

.footer-title {
  color: white;
  margin-bottom: 1.5rem;
  font-size: 1.2rem;
  font-weight: 600;
}

.footer-links {
  list-style: none;
  margin: 0;
  padding: 0;
}

.footer-links li {
  margin-bottom: 0.75rem;
}

.footer-link {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  transition: color 0.3s ease;
  font-size: 0.95rem;
}

.footer-link:hover {
  color: var(--color-primary);
}

.contact-item {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.contact-icon {
  font-size: 1.2rem;
  flex-shrink: 0;
}

.contact-link {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  transition: color 0.3s ease;
}

.contact-link:hover {
  color: var(--color-primary);
}

.contact-address {
  color: rgba(255, 255, 255, 0.8);
  font-style: normal;
  line-height: 1.5;
}

.trust-badges {
  margin-top: 1.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.trust-badge {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.badge-icon {
  font-size: 1rem;
}

.badge-text {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
}

.footer-bottom {
  background: rgba(0, 0, 0, 0.3);
  padding: 1.5rem 0;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.footer-bottom-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.footer-legal {
  flex: 1;
}

.company-info {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 0.5rem;
}

.copyright {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
  margin: 0;
}

.footer-payment {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.payment-text {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.8);
}

.payment-icons {
  display: flex;
  gap: 0.5rem;
}

.payment-icon {
  font-size: 1.5rem;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.payment-icon:hover {
  opacity: 1;
}

/* Responsive */
@media (max-width: 1024px) {
  .footer-grid {
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
  
  .footer-about {
    grid-column: 1 / -1;
    max-width: none;
  }
}

@media (max-width: 768px) {
  .footer-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .footer-content {
    padding: 2rem 0 1.5rem;
  }
  
  .footer-bottom-content {
    flex-direction: column;
    text-align: center;
  }
  
  .trust-badges {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .social-links {
    justify-content: center;
  }
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}
</style>

