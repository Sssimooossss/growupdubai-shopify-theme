<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="#2ECC71">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>
      {{ page_title }}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {{ content_for_header }}

    {% style %}
      :root {
        --color-primary: #2ECC71;
        --color-secondary: #27AE60;
        --color-dark-bg: #2F3137;
        --color-dark-secondary: #1A1C1F;
        --color-light-bg: #F9FAFB;
        --color-light-secondary: #FFFFFF;
      }

      /* EXACT GrowUp Dubai Styles */
      * { box-sizing: border-box; margin: 0; padding: 0; }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background-color: var(--color-dark-bg);
        color: white;
        transition: all 0.3s ease;
        line-height: 1.6;
      }

      body.light-mode {
        background-color: var(--color-light-bg);
        color: #111827;
      }

      /* Header exactly like original */
      .header {
        background-color: var(--color-dark-secondary);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        position: sticky;
        top: 0;
        z-index: 50;
      }

      body.light-mode .header {
        background-color: var(--color-light-secondary);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      }

      .header-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 80px;
      }

      .logo img {
        height: 64px;
        filter: invert(0);
        transition: filter 0.3s ease;
      }

      body.light-mode .logo img {
        filter: invert(1);
      }

      .nav {
        display: flex;
        gap: 2rem;
      }

      .nav-item {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      body.light-mode .nav-item {
        color: #111827;
      }

      .nav-item:hover {
        color: var(--color-primary);
      }

      .header-controls {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .control-btn {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        color: white;
        text-decoration: none;
      }

      body.light-mode .control-btn {
        background: rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.2);
        color: #111827;
      }

      .cart-count {
        position: absolute;
        top: -8px;
        right: -8px;
        background: var(--color-primary);
        color: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        font-weight: bold;
      }

      /* Main content */
      main {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      /* Hero section */
      .hero {
        text-align: center;
        margin-bottom: 2rem;
      }

      .hero h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: bold;
        margin-bottom: 1.5rem;
        line-height: 1.2;
      }

      .hero-subtitle {
        font-size: 1.125rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 0.5rem;
      }

      body.light-mode .hero-subtitle {
        color: rgba(17, 24, 39, 0.7);
      }

      /* Product grid */
      .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        margin: 2rem 0;
      }

      .product-card {
        background: linear-gradient(135deg, rgba(30, 31, 34, 1), rgba(26, 27, 30, 1));
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
      }

      body.light-mode .product-card {
        background: white;
        border: 1px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
      }

      .product-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(46, 204, 113, 0.2);
      }

      /* Footer */
      .footer {
        background-color: var(--color-dark-secondary);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        margin-top: 4rem;
        padding: 3rem 0;
      }

      body.light-mode .footer {
        background-color: var(--color-light-secondary);
        border-top: 1px solid rgba(0, 0, 0, 0.1);
      }

      /* Responsive */
      @media (max-width: 768px) {
        .nav { display: none; }
        .header-inner { height: 70px; padding: 0 1rem; }
      }
    {% endstyle %}
  </head>

  <body>
    <!-- Header -->
    <header class="header">
      <div class="header-inner">
        <div class="logo">
          <a href="{{ routes.root_url }}">
            <img src="https://i.postimg.cc/VLpdwcdC/logo-white.png" alt="{{ shop.name }}" />
          </a>
        </div>

        <nav class="nav">
          <a href="{{ routes.root_url }}" class="nav-item">Instagram</a>
          <a href="{{ routes.collections_url }}" class="nav-item">TikTok</a>
          <a href="/pages/contact" class="nav-item">YouTube</a>
        </nav>

        <div class="header-controls">
          <button class="control-btn" onclick="toggleTheme()">
            <span id="theme-icon">üåô</span>
          </button>

          <a href="{{ routes.cart_url }}" class="control-btn" style="position: relative;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m1 1 4 4 2.5 13h13l3-7H6"></path>
            </svg>
            <span class="cart-count">{{ cart.item_count }}</span>
          </a>
        </div>
      </div>
    </header>

    <main id="MainContent">
      {{ content_for_layout }}
    </main>

    <script>
      function toggleTheme() {
        document.body.classList.toggle('light-mode');
        const icon = document.getElementById('theme-icon');
        icon.textContent = document.body.classList.contains('light-mode') ? '‚òÄÔ∏è' : 'üåô';
      }
    </script>
  </body>
</html>